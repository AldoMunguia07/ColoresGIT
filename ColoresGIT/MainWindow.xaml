<Window x:Class="ColoresGIT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColoresGIT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Name="btnRed" Content="Rojo"  Grid.Column="0" Grid.Row="0" Margin="5" Click="btnRed_Click"/>
        <Button Name="btnAzul" Content="Azul"  Grid.Column="1" Grid.Row="0" Margin="5" Click="btnAzul_Click"/>
        <Button Name="btnVerde" Content="Verde"  Grid.Column="0" Grid.Row="1" Margin="5" Click="btnVerde_Click"/>
        <Button Name="btnAmarillo" Content="Amarillo"  Grid.Column="1" Grid.Row="1" Margin="5" Click="btnAmarillo_Click"/>

    </Grid>
</Window>
